@model List<Sitecore.Resideo.Models.Product>

<div class="flex-grow-1 mt-5">
    <div class="row">
        @if (Model != null)
        {
            var products = Model;
            foreach (var product in products)
            {
                <div class="col-sm-4">
                    <div class="card">
                        <img class="card-img-top" src=@product.ProductImageUrl alt="Thermostat">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.ProductTitle</h5>
                            <p class="card-text text-left">@Html.Raw(product.ProductDescription)</p>
                            <a href=@product.ProductLink class="btn btn-primary">@product.ProductLinkText</a>
                            <a href=@product.ProductImageUrl download="" class="btn btn-primary">Download</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


